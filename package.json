{
    "name": "tomlenv",
    "version": "1.0.0",
    "description": "Read environment variables from a TOML file ðŸš€",
    "author": "Zaid \"Nico\"",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./": "./"
    },
    "scripts": {
        "build": "npx tsc && npx gen-esm-wrapper . ./dist/index.mjs",
        "lint": "npx eslint src/ --ext .ts,.js",
        "lint:fix": "npm run lint -- --fix",
        "prepublishOnly": "npm run lint && npx rimraf dist/ && npm run build",
        "prepare": "husky install",
        "prettier": "prettier --write **/*.{ts,js,json,yml,yaml}",
        "test": "npx nyc ts-mocha"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "^3.2.3",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.7.6",
        "chai": "^4.3.6",
        "eslint": "^7.6.0",
        "gen-esm-wrapper": "^1.1.2",
        "husky": "^6.0.0",
        "lint-staged": "^10.4.2",
        "mocha": "^9.2.0",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "ts-mocha": "^9.0.2",
        "ts-node": "^10.5.0",
        "typescript": "^4.4.2"
    },
    "dependencies": {
        "toml": "^3.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zaida04/tomlenv.git"
    },
    "bugs": {
        "url": "https://github.com/zaida04/tomlenv.git/issues"
    },
    "homepage": "https://github.com/zaida04/tomlenv.git#readme",
    "files": [
        "dist/"
    ],
    "tags": [
        "toml",
        "tomlenv",
        "toml.env"
    ],
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 150,
        "quoteProps": "as-needed",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": true
    },
    "lint-staged": {
        "*.ts": "eslint --fix"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-angular"
        ],
        "rules": {
            "scope-case": [
                2,
                "always",
                "pascal-case"
            ],
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    }
}
